<h1>Posts#edit</h1>
<h1>Editing post</h1>

 <div>
   <%= flash[:notice]%>
 </div>

  <%= form_with model: @post do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Update Post' %>

      <%= link_to 'Show', post_path(@post) %>
      <%= link_to 'Back', posts_path %>

      <% if @post.errors.any? %>
      <%= @post.errors.count %>error
      <% @post.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
      <% end %>
      <% end %>